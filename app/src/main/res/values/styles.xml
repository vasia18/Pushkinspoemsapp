<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStile_ripple" parent="AppTheme">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/rect</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="ButtonStyle_ripple_distribution" parent="ButtonStile_ripple">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="StyleVerseVse" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="StyleTextVerseTitle" parent="StyleVerseVse">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="StyleTextVerse" parent="StyleVerseVse">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colortext2</item>
    </style>
</resources>
